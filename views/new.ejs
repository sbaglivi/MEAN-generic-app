<%- include ('partials/header.ejs') %>

<div class="container">
    <h1 class="my-5 text-center">Insert a new item</h1>
    <form ACTION="/" METHOD="POST">
        <div class="form-group">
            <label for="itemName">Title</label>
            <input id='itemName' type="text" class="form-control" name="newItem[name]" placeholder="Item title">
        </div>
        <div class="form-group">
            <label for="itemPrice">Price</label>
            <input type="text" id='itemPrice' class="form-control" name="newItem[price]" placeholder="Item price">
        </div>
        <div class="form-group">
            <label for="itemImage">Image link</label>
            <input type="text" id="itemImage" class="form-control" name="newItem[image]" placeholder="Url of the image">
        </div>
        <div class="form-group">
            <label for="itemDescription">Item description</label>
            <textarea id="itemDescription" class="form-control" name="newItem[description]" placeholder="Brief description of the item"></textarea>
        </div>  
        <button style="display: block;" class="btn btn-success btn-lg mx-auto px-5">Submit</button>
    </form>
</div>

<%- include ('partials/footer.ejs') %>