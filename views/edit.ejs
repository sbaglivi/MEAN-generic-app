<% include partials/header.ejs %>
<div style="width:40%; margin: 0 auto; text-align: center;">
    <h1 style="padding: 5%">Editing</h1>
    <form ACTION="/<%=item._id%>?_method=PUT" METHOD="POST">
        <div class="form-group">
            <input type="text" class="form-control" name="updatedItem[name]" value="<%=item.name%>">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="updatedItem[price]" value="<%=item.price%>">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="updatedItem[image]" value="<%=item.image%>">
        </div>
        <div class="form-group">
            <textarea class="form-control" name="updatedItem[description]"><%=item.description%></textarea>
        </div>  
        <button style="margin-top: 5%" class="btn btn-success btn-lg">Submit</button>
    </form>
</div>

